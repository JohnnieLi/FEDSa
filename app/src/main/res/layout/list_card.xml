<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp">
        <!--card_view:contentPadding="@dimen/activity_horizontal_margin"
        card_view:contentPadding="10dp" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
       <!--Media(image) area-->
        <ImageView
            android:id="@+id/card_img"
            android:layout_width="128dp"
            android:layout_height="131dp"
            android:background="#f9f7f7"
            android:transitionName="image"/>

            <!--Primary text-->
        <TextView
            android:id="@+id/card_info"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:gravity="top"
            android:textSize="24sp"
            android:layout_toEndOf="@+id/card_img"
            android:text="Name"
          />

            <View
                android:layout_marginTop="1dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/card_info"
                android:layout_toRightOf="@+id/card_img"/>

            <!--Subtext-->
            <TextView
                android:id="@+id/card_phoneLabel"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_below="@+id/card_info"
                android:layout_toRightOf="@+id/card_img"
                android:text="Phone:"
                android:layout_gravity="center"
                android:textColor="#29ccc1" />


        <TextView
            android:id="@+id/card_phone"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:alpha="0.8"
            android:textSize="@dimen/abc_text_size_small_material"
            android:layout_below="@+id/card_info"
            android:layout_toEndOf="@+id/card_phoneLabel"
            android:text="613_252-1212"
            android:layout_gravity="center"
             />

            <TextView
                android:id="@+id/card_EmailLabel"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_below="@+id/card_phoneLabel"
                android:layout_toEndOf="@+id/card_img"
                android:text="Email:"
                android:layout_gravity="center"
                android:textColor="#29ccc1" />
            <TextView
                android:id="@+id/card_Email"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:alpha="0.8"
                android:textSize="@dimen/abc_text_size_small_material"
                android:layout_below="@+id/card_phone"
                android:layout_toRightOf="@+id/card_EmailLabel"
                android:text="Text@email.com"
                />



            <TextView
                android:id="@+id/card_AddressLabel"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_below="@+id/card_EmailLabel"
                android:layout_toEndOf="@+id/card_img"
                android:text="Address:"
                android:layout_gravity="center"
                android:textColor="#29ccc1" />
        <TextView
            android:id="@+id/card_address"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="top"
            android:alpha="0.8"
            android:paddingTop="5dp"
            android:textSize="@dimen/abc_text_size_small_material"
            android:layout_below="@+id/card_Email"
            android:layout_toRightOf="@+id/card_AddressLabel"
            android:text="Ottawa,K2g"
             />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RatingBar
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_gravity="right"

                />
        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
