<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#f9f7f7"
            android:transitionName="image"/>

        <TextView
            android:id="@+id/card_info"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:alpha="0.8"
            android:textSize="@dimen/abc_text_size_small_material"
            android:layout_toRightOf="@+id/card_img"
            android:text="Text11111111"
            android:layout_gravity="top"
            />

        <TextView
            android:id="@+id/card_address"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:alpha="0.8"
            android:textSize="@dimen/abc_text_size_small_material"
            android:layout_below="@+id/card_info"
            android:layout_toRightOf="@+id/card_img"
            android:text="Text222222222"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/card_phone"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="bottom"
            android:alpha="0.8"
            android:textSize="@dimen/abc_text_size_small_material"
            android:layout_below="@+id/card_address"
            android:layout_toRightOf="@+id/card_img"
            android:text="612-213-1231"
            android:gravity="bottom"

            />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
