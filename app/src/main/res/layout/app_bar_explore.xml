<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/explore_app_bar"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:theme="@style/AppTheme.AppBarOverlay">-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Rushmore.Toolbar.Transparent" />

    </android.support.design.widget.AppBarLayout>


    <com.example.johnnie.ottawadriving.view.PagerSlidingTabStrip
        android:id="@+id/activity_tab_universal_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color_500"
        app:pstsDividerColor="@android:color/white"
        app:pstsDividerWidth="0dp"
        app:pstsDividerPadding="16dp"
        app:pstsIndicatorHeight="2dp"
        app:pstsIndicatorColor="@color/material_yellow_500"
        app:pstsTabTextColor="@android:color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mainPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<android.support.v4.view.PagerTabStrip-->
        <!--android:id="@+id/mainpager_header"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="top"-->
        <!--android:paddingBottom="4dp"-->
        <!--android:paddingTop="4dp" />-->

    </android.support.v4.view.ViewPager>


</LinearLayout>
